<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.toyago"
version="1.0.0"
name="ToyaGO"
provider-name="piotrekcrash">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">ToyaGO Kodi Video Plugin</summary>
  <description lang="en">Addon daje możliwość oglądania kanałów dostępnych w usłudze ToyaGo zalogowanemu użytkownikowi zgodnie z wykupionym pakietem</description>
  <disclaimer lang="en">Plugin ToyaGO dla Kodi</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.png</screenshot>
    <screenshot>resources\screenshot-02.png</screenshot>
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>
